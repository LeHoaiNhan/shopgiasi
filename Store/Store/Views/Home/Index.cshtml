<div class="row">
    <div class="col-12 col-md-3 col-lg-2">123123</div>
    <div class="col-12 col-md-9 col-lg-10">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center" id="listProduction"> </div>
        <div><button onclick="loadData()">load more</button></div>
    </div>
</div>
<script>
    let productMax = 0;
    $(document).ready(function () {
        loadData();
    });
    function loadData() {
        $.ajax({
            url: "/Home/listProduct",
            data: { "maxID": productMax, "numberCount":8 }
                , success: function (result) { 
                    if (result.length > 0) {
                        let _child = '';
                        for (let i = 0; i < result.length; i++) {
                             // _child += "<div class='col-6 col-sm-3'><a href='chi-tiet-san-pham/" + result[i].URLProduct + "/" + result[i].ID 
                             // + "' ><div> <div style='background-color:gray;width:100%;min-height: 150px;position: relative;overflow: hidden;background-position: center center;' ><img src='" + result[i].img + "' alt='" + result[i].URLProduct
                             //     + "' style='object-fit: contain;width:100%' ></div> <div class='featured__item__text'> <h6><a href='#'> " + result[i].name + " </a></h6> <h5>" + result[i].price + " </h5> </div> </div></a></div>";


                        _child += " <div class='col mb-5' ><a href='chi-tiet-san-pham/" + result[i].URLProduct + "/" + result[i].ID +"'>"             
                                + " <div class='card h-100' >                                                                                    "
                            + " <img class='card-img-top' style='max-height: 300px' src='" + result[i].img + "' alt='" + result[i].URLProduct + "'/>"
                                + " <div class='card-body p-4' >                                                                                 "
                                + " <div class='text-center' >                                                                                   "
                                + " <h5 class='fw-bolder' >  " + result[i].name + " </h5>                                                                  "
                                + " $40.00 - >" + result[i].price + "                                                                                              "
                                + " </div>                                                                                                       "
                                + " </div>                                                                                                       "
                                + " <div class='card-footer p-4 pt-0 border-top-0 bg-transparent' >                                              "
                                + " <div class='text-center' > <a class='btn btn-outline-dark mt-auto' href = '#' > View options </a></div>      "
                                + " </div>                                                                                                       "
                                + " </div>  </a>                                                                                                 "
                                + " </div>                                                                                                       "
                        }
                        productMax = productMax+result[result.length - 1].ID                                                                           
                        $('#listProduction').append(_child);
                    } else {
                        alert("Không có sản phẩm được load!")
                    }
                
            }
        }); 
    } 
</script>