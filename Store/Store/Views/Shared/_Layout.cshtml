}
</style>


<script>
    function Template_ProductReview(result) {
        let _child = '';
        var _Object = result.reduce(function (r, a) {
            r[a.PageID] = r[a.PageID] || [];
            r[a.PageID].push(a);
            return r;
        }, Object.create(null));

        for (let i = 0; i < Object.keys(_Object).length; i++) {
            var key = _Object[Object.keys(_Object)[i]]
            _child = "<section class='bg-light'>"
                + "<div class='container mt-4'>"
                + "<h2 class='fw-bolder p-2'><a href='Home/Store?PageID=" + key[0].PageID + "&CategoryID=" + key[0].CategoryID + "'>" + key[0].PageName + "</a></h2>"
                + "<div class='ProductReview'>"
            for (let i2 = 0; i2 < key.length; i2++) {
                _child += "     <div class='col-2 col-md-3 col-xl-4 mb-5' "
                    + "            <a href='chi-tiet-san-pham/" + key[i2].URLProduct + "/" + key[i2].ID + "'> </a>"
                    + "            <div class='card h-100'>"
                    + "                <a href = 'chi-tiet-san-pham/" + key[i2].URLProduct + "/" + key[i2].ID + "'>"
                    + "                    <img class='card-img-top'  width='100%' style='aspect-ratio:450/300; object-fit:fill;' src = '" + key[i2].img + "' alt = '" + key[i2].URLProduct + "'>"
                    + "                    <div class='card-body p-4'>"
                    + "                        <div class='text-center'>"
                    + "                            <h5 class='fw-bolder'> " + key[i2].Name + " </h5> " + key[i2].Price
                    + "                        </div></div></a>"
                    + "                <div class='card-footer p-4 pt-0 border-top-0 bg-transparent'>"
                    + "                    <a href='" + key[i2].URLProduct + "'></a>"
                    + "                    <div class='text-center'>"
                    + "                        <a href='" + key[i2].URLProduct + "'> </a>"
                    + "                        <a class='btn btn-outline-dark mt-auto' href = '" + key[i2].URLProduct + "'> Chi Tiết </a>"
                    + "</div></div></div></div>"

            }
            _child += "</div></div></section>"
        } 
        return _child;
    }

    function Template_ListProduct(result) {
        let _child = '';
        for (let i = 0; i < result.length; i++) {
            _child += " <div class='col' ><a href='chi-tiet-san-pham/" + result[i].URLProduct + "/" + result[i].ID + "'>"
                + " <div class='card h-100' >                                                                                    "
                + " <img class='card-img-top' width='100%' style='aspect-ratio:450/300; object-fit:fill;' src='" + result[i].img + "' alt='" + result[i].URLProduct + "'/>"
                + " <div class='card-body p-4' >                                                                                 "
                + " <div class='text-center' >                                                                                   "
                + " <h5 class='fw-bolder' >  " + result[i].Name + " </h5>VNĐ" + result[i].Price 
                + " </div>                                                                                                       "
                + " </div>                                                                                                       "
                + " <div class='card-footer p-4 pt-0 border-top-0 bg-transparent' >                                              "
                + " <div class='text-center' > <a class='btn btn-outline-dark mt-auto' href='chi-tiet-san-pham/" + result[i].URLProduct + "/" + result[i].ID + "' > Chi Tiết </a></div> "
                + " </div>                                                                                                       "
                + " </div>  </a>                                                                                                 "
                + " </div>                                                                                                       "
        }
        return _child;
    }
</script>